<%= user_signed_in? %>


<div class="row">
  <div class="mx-auto m-5 col-3">
      <%= link_to new_user_registration_path, class:"btn btn-info btn-sm btn-block mb-5 sign_up" do %>
          <span><i class="fas fa-sign-up-alt"></i> 新規登録 </span>
      <% end %>
      
      <%= link_to destroy_user_session_path, class:"btn btn-info btn-sm btn-block mb-3 sign_out",method: :delete do %>
          <span><i class="fas fa-sign-in-alt"></i> ログアウト </span>
      <% end %>
      

      <%= link_to new_user_session_path, class:"btn btn-info btn-sm btn-block mb-3 sign_in" do %>
          <span><i class="fas fa-sign-in-alt"></i> ログイン </span>
      <% end %>

  </div>
</div>


