<div class="row my-5">
  <div class="col-3">
  </div>
  <div class="col-3 pl-5">
    <h2 class="bg-light d-flex align-items-center justify-content-center w-75">勤怠一覧</h2>
  </div>
  <div class="col-6">
  </div>
</div>

<div class="row">
  <div class="col-4">
  </div>
  <div class="col-4">
    <table class="table table-hover">
      <thead>
        <tr>
          <th>出勤時間</th>
          <th>休憩開始時間</th>
          <th>休憩終了時間</th>
          <th>退勤時間</th>
        </tr>
      </thead>
      <tbody>
        <% @attendances.each do |attendance| %>
          <tr>
            <td><%= attendance.go_work ? I18n.l(attendance.go_work) : "" %></td>
            <td><%= attendance.start_lest ? I18n.l(attendance.start_lest) : "" %>
            <td><%= attendance.finish_lest ? I18n.l(attendance.finish_lest) : ""%></td>
            <td><%= attendance.leaving_work ? I18n.l(attendance.leaving_work) : ""%></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  <div class="col-4">
  </div>
</div>



