<%= form_with model: @calendar, url:public_calendars_path, local: true do |f| %>
    <div class="row">
      <div class="col-3"></div>
        <div class="col-5">
          <table class="table">
              <tr>
                <td><%= f.text_field :title, autofocus: true, class:"form-control mt-5", placeholder:"理由" %></td>
              </tr>
              <tr>
                <td><%= f.text_field :content, autofocus: true, class:"form-control", placeholder:"内容" %></td>
              </tr>
              <tr>
                <td><%= f.datetime_select :start_time, autofocus: true, class:"form-control", placeholder:"日時" %></td>
              </tr>
        </table>
      </div>
    </div>
    <div class="row">
      <div class="col-5"></div>
        <div class="col-2 d-flex align-items-center justify-content-center">
          <%= f.submit "申請", class:"btn btn-primary btn-lg"  %>
        </div>
        <div class="col-5"> </div>
    </div>
<% end %>