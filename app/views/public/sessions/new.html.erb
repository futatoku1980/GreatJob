<h2>Log in</h2>

<%= form_for(resource, as: resource_name, url: user_session_path(resource_name)) do |f| %>
  <div class="field">
   <%= f.label :user_id %><br />
   <%= f.text_field :user_id, autofocus: true, autocomplete: "user_id" %>
  </div>

  <div class="field">
    <%= f.label :password %><br />
    <%= f.password_field :password, autocomplete: "current-password" %>
  </div>

  <% if devise_mapping.rememberable? %>
    <div class="field">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me %>
    </div>
  <% end %>

  <div class="actions">
    <%= f.submit "Log in" %>
  </div>
<% end %>

<%= link_to 'ログアウト', destroy_user_session_path,class: 'dropdown-item',method: :delete %>

<%= render "public/shared/links" %>
