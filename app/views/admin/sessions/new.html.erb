<h2> log in </h2>

<%= form_for(resource, as: resource_name, url: admin_session_path(resource_name)) do |f| %>
  <h2 class="form-signin-heading">
    ログイン
  </h2>
  
  <%= f.text_field :enployee_code,
    class: "form-control",
    placeholder: "社員番号" %>
  
  <%= f.password_field :password,
    autocomplete: "off",
    class: "form-control",
    placeholder: "パスワード" %>


  <% if devise_mapping.rememberable? %>
    <div class="field">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me %>
    </div>
  <% end %>

  <div class="actions">
    <%= f.submit "Log in" %>
  </div>
<% end %>

<%= render "admin/shared/links" %>

