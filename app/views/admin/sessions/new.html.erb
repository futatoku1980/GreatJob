<div class="row my-5">
  <div class="col-3">
  </div>
  <div class="col-4 pl-3">
    <h1 class="bg-light d-flex align-items-center justify-content-center w-50">責任者</h1>
  </div>
  <div class="col-6">
  </div>
</div>

<%= form_for(resource, as: resource_name, url: admin_session_path) do |f| %>

<div class="row mb-4">
  <div class="col-4">
  </div>
  <div class="col-1">
    社員番号
  </div>
  <div class="col-3">
    <%= f.text_field :enployee_code,autocomplete: "current-password" , class:"form-control", placeholder:"社員番号" %>
  </div>
</div>

<div class="row mb-3">
  <div class="col-4">
  </div>
  <div class="col-1">
    パスワード
  </div>
  <div class="col-3">
    <%= f.password_field :password, autocomplete: "current-password", class:"form-control", placeholder:"Password" %>
  </div>
</div>

<div class="row my-4">
  <div class="col-5">
  </div>
    <div class="col-2">
      <%= f.submit "ログイン", class:"btn btn-primary w-50" %>
    </div>
    <%= render "admin/shared/links" %>
  <% end %>
  </div>
</div>
